{
    "$id": "http://example.com/example.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "title": {
            "minLength": 1,
            "maxLength": 80,
            "type": "string"
        },
        "salary": {
            "minimum": 0,
            "type": "integer"
        },
        "equity": {
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)"
        }
    },
    "additionalProperties": false,
    "required": [
        "title"
    ]
}